@{
    string currentActionName = this.ViewContext.RouteData.Values["action"]?.ToString();
    string currentControllerName = this.ViewContext.RouteData.Values["controller"]?.ToString();
    string isHomeShowing = currentControllerName.Equals("") ? "active" : "";
    string isCreateShowing = currentActionName.Equals("Create") ? "active" : "";
    string isAllCamerasShowing = currentControllerName.Equals("Cameras") && !currentActionName.Equals("Create") ? "active" : "";
}
<!-- Header Section Begin -->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__left">
                            <ul>
                                <li>Dashboard</li>
                                <li>Welcome to admin workspace!</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__right">
                            <div class="header__top__right__language">
                                <img src="~/img/language.png" alt="">
                                <div>English</div>
                                <span class="arrow_carrot-down"></span>
                                <ul>
                                    <li><a href="#">Spanis</a></li>
                                    <li><a href="#">English</a></li>
                                </ul>
                            </div>
                            <div class="header__top__right__auth">
                                <partial name="~/Views/Shared/_LoginPartial.cshtml" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
        <div class="row">
                <div class="col-lg-3">
                    <div class="header__logo">
                        <a asp-area="User" asp-controller="Home" asp-action=""><img src="~/img/logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-9">
                    <nav class="header__menu">
                        <ul>
                            <li class=@isHomeShowing><a asp-area="Admin" asp-controller="" asp-action="">Home</a></li>
                            <li class=@isAllCamerasShowing><a asp-area="Admin" asp-controller="Cameras" asp-action="">All Cameras</a></li>
                            <li class=@isCreateShowing><a asp-area="Admin" asp-controller="Cameras" asp-action="Create">Create a new camera</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->