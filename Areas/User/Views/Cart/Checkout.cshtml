@model CartViewModel;
@{
    ViewData["Title"] = "Reading Blog";
}

<vc:big-banner Title="Checkout"
               SubTitle="Make you decision"></vc:big-banner>

<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h6><span class="icon_tag_alt"></span> Have a coupon? <a href="#">Click here</a> to enter your code
                </h6>
            </div>
        </div>
        <div class="checkout__form">
            <h4>Billing Details</h4>
            <form method="post" action="">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Name<span>*</span></p>
                                    <input type="text" asp-for="Order.Name" required>
                                </div>
                            </div>
                        </div>
                        <!--
                        <div class="checkout__input">
                            <p>Country<span>*</span></p>
                            <input type="text">
                        </div>-->
                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            <input type="text" asp-for="Order.Address" placeholder="Street Address" required>
                            <!--<input type="text" placeholder="Apartment, suite, unite ect (optinal)">-->
                        </div>
                        <!--
                        <div class="checkout__input">
                            <p>Town/City<span>*</span></p>
                            <input type="text">
                        </div>
                        <div class="checkout__input">
                            <p>Country/State<span>*</span></p>
                            <input type="text">
                        </div>
                        <div class="checkout__input">
                            <p>Postcode / ZIP<span>*</span></p>
                            <input type="text">
                        </div>
                        -->
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Phone<span>*</span></p>
                                    <input type="text" asp-for="Order.PhoneNumber" required>
                                </div>
                            </div>
                            <!--
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="text">
                                </div>
                            </div>
                            -->
                        </div>
                        <div class="checkout__input__checkbox">
                            <label for="acc">
                                Create an account?
                                <input type="checkbox" id="acc">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <div class="checkout__input__checkbox">
                            <label for="diff-acc">
                                Ship to a different address?
                                <input type="checkbox" id="diff-acc">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <div class="checkout__input">
                            <p>Order notes</p>
                            <input type="text"
                                placeholder="Notes about your order, e.g. special notes for delivery.">
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Your Order</h4>
                            <div class="checkout__order__products">Products <span>Total</span></div>
                            <ul>
                                @if(ViewBag.Cart == null) {
                                    <li><p>Bạn chưa đăng nhập, ấn <a href="/Identity/Account/Login">vào đây</a> để đăng nhập!</p></li>
                                } else {
                                    @foreach (CartModel item in ViewBag.Cart.CartList)
                                    {
                                        <li>
                                            <p><span>@item.Amount x </span>@item.Camera.Name</p>
                                            <p>@String.Format("{0:0,0} đ", item.ProductPrice)</p>
                                        </li>
                                    }
                                }
                            </ul>
                            <div class="checkout__order__subtotal">Subtotal <span>@(ViewBag.Cart == null ? "0 đ" : String.Format("{0:0,0} đ", ViewBag.Cart.Order.Subtotal))</span></div>
                            <div class="checkout__order__total">Total <span>@(ViewBag.Cart == null ? "0 đ" : String.Format("{0:0,0} đ", ViewBag.Cart.Order.Subtotal))</span></div>
                            <div class="checkout__input__checkbox">
                                <label for="acc-or">
                                    Create an account?
                                    <input type="checkbox" id="acc-or">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <p>Lorem ipsum dolor sit amet, consectetur adip elit, sed do eiusmod tempor incididunt
                                ut labore et dolore magna aliqua.</p>
                            <div class="checkout__input__checkbox">
                                <label for="payment">
                                    Check Payment
                                    <input type="checkbox" id="payment">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="checkout__input__checkbox">
                                <label for="paypal">
                                    Paypal
                                    <input type="checkbox" id="paypal">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <button type="submit" class="site-btn">PLACE ORDER</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->