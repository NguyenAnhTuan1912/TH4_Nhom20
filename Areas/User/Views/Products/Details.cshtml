@{
    string[] features = ViewBag.ChiTiet.CameraFeatures.Split(";");
}

<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Shop in style</h1>
            <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
        </div>
    </div>
</header>
<div class="container mt-4">
    <div class="details">
        <div class="details-body">
            <h3 class="details-title">@ViewBag.ChiTiet.CameraName</h3>
            <h6 class="details-subtitle">Brand: @ViewBag.ChiTiet.BrandName, Category: @ViewBag.ChiTiet.Category</h6>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center details-big-image"><img src="/@ViewBag.ChiTiet.ImageUrls.Split(";")[0]" class="img-responsive"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Mô tả sản phẩm</h4>
                    <p>Lorem Ipsum available,but the majority have suffered alteration in some form,by injected humour,or randomised words which don't look even slightly believable.but the majority have suffered alteration in some form,by injected humour</p>
                    <h2 class="mt-5">
                        @ViewBag.ChiTiet.CameraPrice đ<small class="text-success"></small>
                    </h2>
                    <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="" data-original-title="Add to cart">
                        <span class="material-symbols-outlined">
                            shopping_cart
                        </span>
                    </button>
                    <button class="btn btn-primary btn-rounded">Buy Now</button>
                    <h3 class="box-title mt-5">Tính năng nổi bật</h3>
                    <ul class="list-unstyled key-features">
                        @for(int i = 0; i < 3; i++){
                            <li><span class="material-symbols-outlined me-3">done</span>@features[i]</li>
                        }
                    </ul>
                </div>
                <hr class="my-4"/>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-3">Các thông số của @ViewBag.ChiTiet.CameraName</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <thead>
                                <tr>
                                    <td>Tính năng</td>
                                    <td>Dữ liệu</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(string feature in features){
                                    if(@feature.Split(":").Length < 2) {
                                        <tr>
                                            <td width="390" colspan="2">@feature.Split(":")[0]</td>
                                        </tr>
                                    } else {
                                        <tr>
                                            <td width="390">@feature.Split(":")[0]</td>
                                            <td>@feature.Split(":")[1]</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-3">Giới thiệu sản phẩm</h3>
                    <p>@ViewBag.ChiTiet.CameraIntroduction</p>
                </div>
            </div>
        </div>
    </div>
</div>