@{
    string currentControllerName = ViewContext.RouteData.Values["controller"].ToString();
    string isHomeShowing = currentControllerName.Equals("Home") ? "active" : "";
    string isShopShowing = currentControllerName.Equals("Shop") ? "active" : "";
    string isContactShowing = currentControllerName.Equals("Contact") ? "active" : "";
}

@model CartModel;
<!-- Header Section Begin -->
<header class="header">
    <div class="header__top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6">
                    <div class="header__top__left">
                        <ul>
                            <li>Free Shipping for all Order of $99</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="header__top__right">
                        <div class="header__top__right__social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                            <a href="#"><i class="fa fa-pinterest-p"></i></a>
                        </div>
                        <div class="header__top__right__language">
                            <img src="~/img/language.png" alt="">
                            <div>English</div>
                            <span class="arrow_carrot-down"></span>
                            <ul>
                                <li><a href="#">Spanis</a></li>
                                <li><a href="#">English</a></li>
                            </ul>
                        </div>
                        <div class="header__top__right__auth">
                            <partial name="~/Views/Shared/_LoginPartial.cshtml" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="header__logo">
                    <a asp-area="User" asp-controller="Home" asp-action=""><img src="~/img/logo.png" alt=""></a>
                </div>
            </div>
            <div class="col-lg-6">
                <nav class="header__menu">
                    <ul>
                        <li class=@isHomeShowing><a asp-area="User" asp-controller="Home" asp-action="">Home</a></li>
                        <li class=@isShopShowing><a asp-area="User" asp-controller="Shop" asp-action="">Shop</a></li>
                        <li class=@isContactShowing><a asp-area="User" asp-controller="Contact" asp-action="">Contact</a></li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">
                <div class="header__cart">
                    <ul>
                        <li><a href="#"><i class="fa fa-heart"></i> <span>1</span></a></li>
                        <li class="dropdown">
                            <a asp-controller="Shop" asp-action="Cart"><i class="fa fa-shopping-cart"></i> <span>@(ViewBag.Carts.Count == null ? 0 : ViewBag.Carts.Count)</span></a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <div class="dd-title d-flex align-items-center justify-content-center">
                                    <p>Preview Cart</p>
                                </div>
                                @foreach (CartModel item in ViewBag.Carts) {
                                    <div class="item d-flex flex-row align-items-center justify-content-between p-2">
                                        <a href="User/Shop/Details/?cameraId=@item.Camera.Id">
                                            <div class="d-flex flex-row align-items-center">
                                                <div class="cart-item__info">
                                                    <p>@item.Camera.Name</p>
                                                    <p>@item.Amount x @String.Format("{0:0,0}", int.Parse(item.Camera.Price))</p>
                                                </div>
                                                <div class="cart-item__image">
                                                    <img src="~/@item.Camera.ImageUrls.Split(';')[0]" />
                                                </div>
                                            </div>
                                        </a>
                                        <button class="btn"><span class="icon_close"></span></button>
                                    </div>
                                }
                                <div class="dd-footer">
                                    <div class="cart-subtotal">
                                        <p><strong>Total: </strong>@String.Format("{0:0,0} đ", ViewBag.Subtotal)</p>
                                    </div>
                                    <div class="dd-buttons d-flex flex-row align-items-center justify-content-end">
                                        <a href="User/Shop/Cart" class="primary-btn">View Cart</a>
                                        <a href="User/Shop/Checkout" class="primary-btn cart-btn">Checkout</a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="header__cart__price">item(s): <span>@String.Format("{0:0,0} đ", ViewBag.Subtotal)</span></div>
                </div>
            </div>
        </div>
        <div class="humberger__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>
<!-- Header Section End -->
<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="row">
            <vc:departments></vc:departments>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            <input type="text" placeholder="What do yo u need?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+65 11.188.888</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->