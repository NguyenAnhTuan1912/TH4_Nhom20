@{
    ViewData["Title"] = "The Loai";
}

<h1 class="mb-4 mt-2 .text-primary">Thể loại/Tất cả</h1>
<table>
    <tr>
        <th>Số thứ tự</th>
        <th>Thể loại</th>
        <th>Ngày tạo</th>
        <th>Chức năng</th>
    </tr>
    @{
        int index = 1;
        foreach(var category in @ViewBag.TheLoai) {
            <tr>
                <td>@index</td>
                <td>@category.Name</td>
                <td>@category.DateCreated</td>
                <td>
                    <a
                        asp-controller="TheLoai"
                        asp-action="Edit"
                        asp-route-id=@category.Id
                        asp-route-name=@category.Name
                        asp-route-datecreated=@category.DateCreated
                    >
                    Chỉnh sửa
                    </a>
                    |
                    <a 
                        asp-controller="TheLoai"
                        asp-action="Details"
                        asp-route-id=@category.Id
                    >
                    Chi tiết
                    </a>
                    |
                    <a 
                        asp-controller="TheLoai"
                        asp-action="Delete"
                        asp-route-id=@category.Id
                    >
                    Xoá
                    </a>
                    
                </td>
            </tr>
            index += 1;
        }
    }
</table>
<partial name="~/Views/Shared/_TheLoaiActionPartial.cshtml" />
